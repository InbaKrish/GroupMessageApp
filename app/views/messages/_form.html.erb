<%= form_for message, html: {class: "ui reply form", role: 'form'}, remote: true, url: message_path do |f| %>
  <div class="field">
    <div class="ui fluid icon input">
      <%= f.text_field :body %>
      <%= f.button '<i class="telegram plane icon"></i>'.html_safe %>
    </div>
  </div>
<% end %>